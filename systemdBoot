[Unit]
Description=MJPG Streamer Service
After=network.target

[Service]
ExecStart=/usr/local/bin/mjpg_streamer -i "input_uvc.so -r 640x480 -d /dev/video0 -f 24 -q 80" -o "output_http.so -p 8080 -w /usr/local/share/mjpg-streamer/www"
Type=simple
Restart=on-failure
User=pi

[Install]
WantedBy=multi-user.target
